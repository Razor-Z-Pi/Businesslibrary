<Page x:Class="CourseLibrary.Pages.Acounting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseLibrary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Acounting">

    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0">
            <TextBox Width="200" Height="30" TextAlignment="Center" MaxLength="30"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Margin="0 30 0 0">
            <DataGrid AutoGenerateColumns="False" x:Name="datagrid" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Руководитель" Binding="{Binding Profer.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Студент" Binding="{Binding Student.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Книга" Binding="{Binding Book.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата выдачи"  Binding="{Binding DataOfIssue}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата принятия"   Binding="{Binding DateOfIssue}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Количество книг"   Binding="{Binding NumberOfBooks}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
